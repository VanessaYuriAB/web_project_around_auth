############################################################
# 🌍 Regras gerais de formatação e final de linha (EOL)
# 🌍 Define comportamento padrão para todos os arquivos
# de texto
* text eol=lf
# 🧠 Arquivos de texto — garantem consistência entre
# sistemas
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.env    text eol=lf
*.env.example text eol=lf
*.lock   text eol=lf
*.txt    text eol=lf
# 🖼️ Arquivos binários — rastreados com Git LFS
# Evitam conversão de EOL e corrupção de imagens
*.png    filter=lfs diff=lfs merge=lfs -text
*.jpg    filter=lfs diff=lfs merge=lfs -text
*.jpeg   filter=lfs diff=lfs merge=lfs -text
*.gif    filter=lfs diff=lfs merge=lfs -text
*.svg    filter=lfs diff=lfs merge=lfs -text
*.ico    filter=lfs diff=lfs merge=lfs -text
*.pdf    filter=lfs diff=lfs merge=lfs -text
*.zip    filter=lfs diff=lfs merge=lfs -text
*.tar    filter=lfs diff=lfs merge=lfs -text
*.gz     filter=lfs diff=lfs merge=lfs -text
*.mp4    filter=lfs diff=lfs merge=lfs -text
*.mov    filter=lfs diff=lfs merge=lfs -text
*.avi    filter=lfs diff=lfs merge=lfs -text
*.webp   filter=lfs diff=lfs merge=lfs -text
*.woff   filter=lfs diff=lfs merge=lfs -text
*.woff2  filter=lfs diff=lfs merge=lfs -text
*.ttf    filter=lfs diff=lfs merge=lfs -text
*.otf    filter=lfs diff=lfs merge=lfs -text
*.psd    filter=lfs diff=lfs merge=lfs -text
# ⚙️ Outros arquivos de configuração comuns
*.sh     text eol=lf
*.bat    text eol=crlf
*.ps1    text eol=crlf
# 🧩 Outros binários — não tratados como texto
*.bin    -text
*.exe    -text
*.dll    -text
vendor/fonts/*.ttf filter=lfs diff=lfs merge=lfs -text
vendor/fonts/*.otf filter=lfs diff=lfs merge=lfs -text
